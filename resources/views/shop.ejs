
	<!-- breadcrumb-section -->
	<div class="breadcrumb-section breadcrumb-bg">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 offset-lg-2 text-center">
					<div class="breadcrumb-text">
						<p>Select Restaurant to visit</p>
						<h1>Choose Restaurant</h1>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end breadcrumb section -->

	<!-- products -->
	<div class="product-section mt-150 mb-150">
		<div class="container">

			<div class="row product-lists">
				<% restaurants.forEach(function(restaurant) { %>
					<div class="col-lg-4 col-md-6 text-center strawberry">
						<div class="single-product-item">
							<div class="product-image">
								<a href="/single-product"><img src="/img/products/<%=restaurant.toJSON().Rimage%>" alt=""></a>
							</div>
							<h3><%=restaurant.toJSON().RName%></h3>
							<a href="/restaurant/<%=restaurant.toJSON()._id%>" class="cart-btn"><i class="fas fa-shopping-cart"></i> Order Food</a>
						</div>
					</div>
				<% }) %>
			</div>

			<div class="row">
				<div class="col-lg-12 text-center">
					<div class="pagination-wrap">
						<ul>
							<li><a href="#">Prev</a></li>
							<li><a href="#">1</a></li>
							<li><a class="active" href="#">2</a></li>
							<li><a href="#">3</a></li>
							<li><a href="#">Next</a></li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end products -->
